{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "jsx": "react-jsx", // For React JSX
      "allowJs": true,    // Allow JavaScript and TypeScript together
      "checkJs": false,   // Skip type-checking JavaScript files
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  